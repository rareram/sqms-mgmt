{
  "manifest_version": 3,
  "name": "Grafana to Teams Sender",
  "version": "1.0",
  "description": "Send Grafana graphs to MS Teams chats",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*.grafana.com/*",
    "*://teams.microsoft.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.grafana.com/*"],
      "js": ["content-grafana.js"]
    },
    {
      "matches": ["*://teams.microsoft.com/*"],
      "js": ["content-teams.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["html2canvas.min.js"],
    "matches": ["*://*.grafana.com/*"]
  }]
}
